@model TownSquare.Models.ApplicationUser

@{
    ViewData["Title"] = "Profile";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2>@ViewData["Title"]</h2>
        <hr />

        <div class="card">
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong>Full Name:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.FullName
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong>Email:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.Email
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong>Role:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.Role
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong>Member Since:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.CreatedAt.ToString("MMMM dd, yyyy")
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>
