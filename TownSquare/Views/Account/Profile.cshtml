@model TownSquare.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        <hr />

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Account Information</h5>
                <div class="row mb-3">
                    <div class="col-md-3">
                        <strong>Full Name:</strong>
                    </div>
                    <div class="col-md-9">
                        @Model.User.FullName
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <strong>Email:</strong>
                    </div>
                    <div class="col-md-9">
                        @Model.User.Email
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <strong>Role:</strong>
                    </div>
                    <div class="col-md-9">
                        @Model.User.Role
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <strong>Member Since:</strong>
                    </div>
                    <div class="col-md-9">
                        @Model.User.CreatedAt.ToString("MMMM dd, yyyy")
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="card-title mb-0">My Events (@Model.CreatedEvents.Count)</h5>
                    <a asp-controller="Events" asp-action="Create" class="btn btn-primary btn-sm">Create New Event</a>
                </div>

                @if (Model.CreatedEvents.Count == 0)
                {
                    <div class="alert alert-info">
                        <p class="mb-0">You haven't created any events yet. <a asp-controller="Events" asp-action="Create">Create your first event!</a></p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Category</th>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Location</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var evt in Model.CreatedEvents)
                                {
                                    <tr>
                                        <td>@evt.Title</td>
                                        <td><span class="badge bg-primary">@evt.Category</span></td>
                                        <td>@evt.Date.ToString("MMM dd, yyyy")</td>
                                        <td>@evt.Time.ToString(@"hh\:mm")</td>
                                        <td>@evt.Location</td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-controller="Events" asp-action="Details" asp-route-id="@evt.Id" class="btn btn-info">View</a>
                                                <a asp-controller="Events" asp-action="Edit" asp-route-id="@evt.Id" class="btn btn-warning">Edit</a>
                                                <a asp-controller="Events" asp-action="Delete" asp-route-id="@evt.Id" class="btn btn-danger">Delete</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>
