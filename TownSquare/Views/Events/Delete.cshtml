@model TownSquare.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2>@ViewData["Title"]</h2>
        <hr />

        <div class="alert alert-danger">
            <h4>Are you sure you want to delete this event?</h4>
            <p>This action cannot be undone.</p>
        </div>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <h6 class="card-subtitle mb-2 text-muted">@Model.Category</h6>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong>Description:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.Description
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong>Date:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.Date.ToString("MMMM dd, yyyy")
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong>Time:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.Time.ToString(@"hh\:mm tt")
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong>Location:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.Location
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <strong>Organizer:</strong>
                    </div>
                    <div class="col-md-8">
                        @Model.User?.FullName
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete Event</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
